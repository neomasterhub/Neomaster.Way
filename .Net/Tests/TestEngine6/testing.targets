<Project>
	<Choose>

		<When Condition=" '$(Configuration)'=='Release' ">
			<ItemGroup>
				<Compile Remove="**\*UnitDemo*.cs"/>
				<Compile Remove="**\*UnitTests*.cs"/>
				<Compile Remove="**\*Fixture*.cs"/>
			</ItemGroup>
		</When>

		<When Condition=" '$(Configuration)'=='Debug' ">
			<ItemGroup>
				<ProjectReference Include="$(SolutionDir).Net\Tests\TestEngine6\TestEngine6.csproj"/>
			</ItemGroup>
			<ItemGroup>
				<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.1.0" />
				<PackageReference Include="Autofac.Extras.Moq" Version="6.1.0" />
			</ItemGroup>
		</When>

	</Choose>
</Project>
